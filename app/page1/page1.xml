<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="onNavigatedTo">
    <Page.actionBar>
        <ActionBar title="Page 1" icon="" />
    </Page.actionBar>

    <StackLayout padding="10">
        <Label
            text="Use simulateNavigation method for view-to-view navigation. This can be used for primary navigation."
            class="text-center" textWrap="true" />
        <Button text="Go to Page2" tap="goToPage2" />
        <Label
            text="Specify the desired menu name to navigate. Click on the button overhead to see an example."
            class="text-center" textWrap="true" />
        <Label
            text="{{text}}"
            class="text-center" textWrap="true" />
    </StackLayout> 
 
 </Page>