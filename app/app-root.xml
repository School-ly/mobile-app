<!-- 
	I am using plain stacklayout here, you can use any layout you want.
	You also can use nativescript-ripple to get some ripple effect.
	But remember to modify components on AppRootViewModel and 
	modules/navigation-handler file.
 -->

<GridLayout rows="*, auto" columns="*" loaded="onLoaded">
	<Frame row="0" defaultPage="pages/page1/page1"/>
	<!---->


	<GridLayout backgroundColor="#fff" visibility="visible" row="1" columns="*,*,*,*,*" id="bottomNavBar" class="bottom-nav">
		<StackLayout id="page1" class="bottom-nav-btn-active" col="0" tap="{{ navigate }}">
				<Image src="res://home" stretch="none" horizontalAlignment="center" />
				<Label text="Uniersities" textWrap="true" class="bottom-nav-text" />
		</StackLayout>
		<StackLayout id="Events" class="bottom-nav-btn" tap="{{ navigate }}" col="1">
				<Label text="&#xe54c;" class="mdi bottom-nav-icon" textWrap="true" />
				<Label text="Events" textWrap="true" class="bottom-nav-text" />
		</StackLayout>
		<StackLayout id="Blog" class="bottom-nav-btn" tap="{{ navigate }}" col="2">
				<Label text="&#xe0ca;" class="mdi bottom-nav-icon" textWrap="true" />
				<Label text="Blog" textWrap="true" class="bottom-nav-text" />
		</StackLayout>
		<StackLayout id="Lessons" class="bottom-nav-btn" tap="{{ navigate }}" col="3">
				<Label text="&#xe7f7;" class="mdi bottom-nav-icon" textWrap="true" />
				<Label text="Lessons" textWrap="true" class="bottom-nav-text" />
		</StackLayout>
		<StackLayout id="page4" class="bottom-nav-btn" tap="{{ navigate }}" col="4">
				<Label text="&#xe7f7;" class="mdi bottom-nav-icon" textWrap="true" />
				<Label text="Jobs" textWrap="true" class="bottom-nav-text" />
		</StackLayout>
	</GridLayout>

	<!---->
</GridLayout>