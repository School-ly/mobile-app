<Page
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back"/>
        <Label text="{{ name }}"></Label>
    </ActionBar>
    <StackLayout>
        <Image src="{{ photo }}" stretch="aspectFit"
            height="200" />
        <StackLayout class="divider" height="10"></StackLayout>
        <StackLayout padding="10">
            <Label text="{{ title }}" textWrap="true"></Label>
            <Label>
                <FormattedString>
                    <Span text="{{date}}" color="#006600">
                    </Span>
                    <Image src="place-marker.png" /><Span text="{{place}}" color="#990000" fontWeight="Bold">
                    </Span>
                    <Button text="Bookmark" style="horizontal-align: right;" />
                </FormattedString>
            </Label>
            <Button text="Bookmark" style="horizontal-align: right;" />
            <Label text="{{description}}" textWrap="true" />
        </StackLayout>
    </StackLayout>
</Page>