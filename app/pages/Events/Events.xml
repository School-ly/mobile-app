<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="onNavigatedTo"
    xmlns:lv="nativescript-ui-listview" xmlns:img="nativescript-image">
	<Page.actionBar>
		<ActionBar title="Events" icon="" />
	</Page.actionBar>

	<StackLayout padding="10">		
		<ListView height="1000" items="{{ items }}">
			<ListView.itemTemplate>
				<StackLayout tap="showItem">
					<StackLayout class="item">
						<StackLayout class="spacer" height="5"></StackLayout>
						<Image src="{{ photo }}" stretch="aspectFit" height="100" style="horizontal-align:center;" />
						<StackLayout padding="10">
							<Label text="{{ title }}" textWrap="true"></Label>
							<Label text="{{ date }}" textWrap="true"></Label>
							<Label text="{{ place }}" textWrap="true"></Label>
							<Button text="Bookmark" style="horizontal-align:right;" />
						</StackLayout>
					</StackLayout>
					<StackLayout class="spacer" height="20"></StackLayout>
				</StackLayout>
			</ListView.itemTemplate>
		</ListView>
		
	</StackLayout>
</Page>